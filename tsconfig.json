{
  "compilerOptions": {
    "experimentalDecorators": true,
    "target": "es2015",
    "module": "esnext",
    "lib": ["es2015", "es2016", "es2017", "dom"],
    "moduleResolution": "node",
    "skipLibCheck": true,
    "allowJs": true,
    "jsx": "react",
    "sourceMap": true,
    "removeComments": false,
    "strict": true,
    "esModuleInterop": true,
    "typeRoots": ["node_modules/@types", "src/types"]
  },
  "exclude": [
    "node_modules",
    "**/node_modules/*",
    "dist"
  ]
}
